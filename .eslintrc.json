{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "babelOptions": {
            "configFile": "./.babelrc"
        },
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "requireConfigFile": "false",
        "sourceType": "module"
    },
    "parser": "@babel/eslint-parser",
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "camelcase": 2,
        "comma-spacing": "error",
        "no-console": [
            "error",
            {
                "allow": [
                    "debug"
                ]
            }
        ],
        "no-empty": [
            "error",
            {
                "allowEmptyCatch": true
            }
        ],
        "no-extra-semi": "error",
        "eol-last": 2,
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "no-warning-comments": [
            2,
            {
                "terms": [
                    "todo",
                    "fixme",
                    "any other term"
                ],
                "location": "anywhere"
            }
        ],
        "spaced-comment": [
            2,
            "always",
            {
                "markers": [
                    "/"
                ]
            }
        ],
        "space-infix-ops": [
            "error",
            {
                "int32Hint": false
            }
        ],
        "no-var": 2,
        "no-trailing-spaces": "error",
        "brace-style": "error",
        "no-use-before-define": "error"
    }
}
